<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zzkj.dcsystem.dao.DcGoodsMapper">

    <select id="selectGoods" parameterType="com.zzkj.dcsystem.controller.utils.DcGoodsQueryVo" resultType="dcGoods">
        select * from dc_goods
        <where>
            <if test=" goodsName != null and goodsName != ''">
              and goods_name = #{goodsName}
            </if>
            <if test=" startPrice != null ">
                and goods_price <![CDATA[>=]]> #{startPrice}
            </if>
            <if test=" endPrice != null ">
                and goods_price <![CDATA[<=]]> #{endPrice}
            </if>
            <if test=" typeId != null and typeId != ''">
                and type_id = #{typeId}
            </if>
        </where>
    </select>



</mapper>